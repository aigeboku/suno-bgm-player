{
  "manifest_version": 3,
  "name": "Suno BGM Player",
  "version": "2.0.0",
  "description": "Suno のトレンド曲やお気に入りアーティストの曲をシャッフル再生できるBGMプレイヤー。",
  "permissions": [
    "storage",
    "offscreen"
  ],
  "host_permissions": [
    "https://suno.com/*",
    "https://cdn1.suno.ai/*",
    "https://cdn2.suno.ai/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
